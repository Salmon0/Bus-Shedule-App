@model IEnumerable<BusRoute>

@{
    ViewData["Title"] = "Список маршрутов";
    var userId = Context.Session.GetInt32("UserId");
    string userRole = null;
    if (userId != null)
    {
        var db = Context.RequestServices.GetService(typeof(BusSheduleApp.Data.ApplicationDbContext)) as BusSheduleApp.Data.ApplicationDbContext;
        var user = db?.Users.Find(userId);
        userRole = user?.Role.ToString();
    }
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (userRole == "Admin")
    {
        <a asp-action="Create" class="btn btn-success mb-3">Создать маршрут</a>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Маршрут</th>
                    <th>Отправление</th>
                    <th>Прибытие</th>
                    <th>Цена</th>
                    <th>Места</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartureCity → @item.ArrivalCity</td>
                        <td>@item.DepartureTime.ToString("g")</td>
                        <td>@item.ArrivalTime.ToString("g")</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.AvailableSeats</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Подробнее</a>
                            @if (userRole == "Admin")
                            {
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Вы уверены, что хотите удалить этот маршрут?');">
                                    <button type="submit" class="btn btn-danger btn-sm ms-1">Удалить</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>