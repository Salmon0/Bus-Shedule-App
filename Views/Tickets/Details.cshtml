@model Ticket

@{
    ViewData["Title"] = "Детали билета";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="card mt-3">
        <div class="card-header bg-primary text-white">
            <h4>Билет №@Model.Id</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Маршрут:</dt>
                <dd class="col-sm-9">@Model.BusRoute.DepartureCity → @Model.BusRoute.ArrivalCity</dd>

                <dt class="col-sm-3">Дата отправления:</dt>
                <dd class="col-sm-9">@Model.BusRoute.DepartureTime.ToString("f")</dd>

                <dt class="col-sm-3">Номер места:</dt>
                <dd class="col-sm-9">@Model.SeatNumber</dd>

                <dt class="col-sm-3">Статус:</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Дата покупки:</dt>
                <dd class="col-sm-9">@Model.PurchaseDate.ToString("f")</dd>

                <dt class="col-sm-3">Пассажир:</dt>
                <dd class="col-sm-9">@Model.User.GetFullName()</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="MyTickets" class="btn btn-secondary">Назад</a>
        @if (Model.CanBeCancelled())
        {
            <form asp-action="Cancel" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Отменить билет</button>
            </form>
        }
    </div>
</div>